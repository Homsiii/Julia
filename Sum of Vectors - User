function soma_vetor()
    while true
        println("Digite o tamanho do vetor (ou digite 'q' para sair):")
        entrada = readline()
        if entrada == "q"
            break
        end
        
        tamanho = parse(Int, entrada)
        vetor = []
        println("Digite os valores do vetor, separados por espaço:")
        valores = split(readline())
        for valor in valores
            push!(vetor, parse(Int, valor))
        end
        
        soma = 0
        for elemento in vetor
            soma += elemento
        end
        
        println("A soma dos elementos do vetor é: ", soma)
        println()
    end
end

soma_vetor()

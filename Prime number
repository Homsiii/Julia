function e_primo(n)
    if n <= 1
        return false
    end

    for i in 2:isqrt(n)
        if n % i == 0
            return false
        end
    end

    return true
end

numero = 18

if e_primo(numero)
    println("O número $numero é primo.")
else
    println("O número $numero não é primo.")
end
